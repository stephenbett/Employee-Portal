
@model Employee.Models.CreateViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        /* Custom styles */
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h4 {
            color: #333333;
            margin-bottom: 20px;
        }

        .btn-submit {
            background-color: #007bff;
            color: #ffffff;
        }
        .actions {
            text-align: center;
            margin-top: 20px;
        }

            .actions a {
                display: inline-block;
                margin-right: 10px;
                padding: 8px 16px;
                background-color: #4CAF50;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .actions a:hover {
                    background-color: #45a049;
                }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #999;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h4>Create Employee</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">Last Name</label>
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">Pin Number</label>
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.PinNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PinNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="FirstName" class="col-sm-4 col-form-label">Account Number</label>
                    <div class="col-sm-5">
                        @Html.EditorFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Create" class="btn btn-submit" />
                    </div>
                </div>
            }

        <div class="actions">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "back-link" })
        </div>>
        </div>
    </div>
</body>
</html>

