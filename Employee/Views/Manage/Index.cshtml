@model Employee.Models.IndexViewModel
@{
    ViewBag.Title = "Empoyee  Details";
}

<main aria-labelledby="title">
    <h2>Employee Details</h2>

    <div class="employee-details">
        <div class="detail-row">5
            <div class="detail-label">Employee No:</div>
            <div class="detail-value">@Model.UserProfile.No</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Email:</div>
            <div class="detail-value">@Model.UserProfile.E_Mail</div>
        </div>
        <div class="detail-row">
            <div class="detail-label"> First Name:</div>
            <div class="detail-value">@Model.UserProfile.First_Name</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Last Name:</div>
            <div class="detail-value">@Model.UserProfile.Last_Name</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Full Name:</div>
            <div class="detail-value">@Model.UserProfile.FullName</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Gender:</div>
            <div class="detail-value">@Model.UserProfile.Gender</div>
        </div>

    </div>

    <style>
        .employee-details {
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .detail-row {
            display: flex;
            margin-bottom: 10px;
        }

        .detail-label {
            font-weight: bold;
            width: 120px;
        }

        .detail-value {
            flex-grow: 1;
        }
    </style>

























